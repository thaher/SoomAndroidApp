<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bridge.soom.Fragment.AccountFragment">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/marginbig"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.bridge.soom.Activity.RegistrationFillActivity"
        tools:showIn="@layout/activity_registration_fill">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp">
                <ImageView
                    android:src="@drawable/ic_gender"
                    android:layout_width="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:id="@+id/icon_fname"
                    android:layout_height="12dp" />

                <EditText
                    android:id="@+id/fname"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/buttonsize"
                    android:layout_marginEnd="@dimen/marginsmall"
                    android:layout_marginRight="@dimen/marginsmall"
                    android:layout_weight="1"
                    android:hint="@string/fname"
                    android:inputType="textNoSuggestions"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textsize" />

                <EditText
                    android:id="@+id/lname"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/buttonsize"
                    android:layout_marginLeft="@dimen/marginsmall"
                    android:layout_marginStart="@dimen/marginsmall"
                    android:layout_weight="1"
                    android:hint="@string/lname"
                    android:maxLines="1"
                    android:inputType="textNoSuggestions"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textsize" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="8dp"
                android:layout_margin="8dp"
                android:gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_mmil"
                    android:layout_width="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:id="@+id/icon_email"
                    android:layout_height="12dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:hint="@string/email"
                    android:maxLines="1"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textsize"
                    android:id="@+id/email" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_margin="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp">
                <ImageView
                    android:src="@drawable/ic_numbb"
                    android:layout_width="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="12dp" />
                <LinearLayout
                    android:weightSum="7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <EditText
                        android:id="@+id/code"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/buttonsize"
                        android:layout_marginEnd="@dimen/marginsmall"
                        android:layout_marginRight="@dimen/marginsmall"
                        android:layout_weight="1"
                        android:hint="@string/code"
                        android:maxLines="1"
                        android:inputType="number"
                        android:paddingEnd="@dimen/marginmid"
                        android:paddingStart="@dimen/marginmid"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textsize" />

                    <EditText
                        android:id="@+id/mobnum"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/buttonsize"
                        android:layout_marginLeft="@dimen/marginsmall"
                        android:layout_marginStart="@dimen/marginsmall"
                        android:layout_weight="6"
                        android:hint="@string/mob"
                        android:inputType="number"
                        android:maxLines="1"
                        android:paddingEnd="@dimen/marginmid"
                        android:paddingStart="@dimen/marginmid"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textsize" />
                </LinearLayout>


            </LinearLayout>




            <LinearLayout
                android:visibility="gone"
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_margin="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp">
                <ImageView
                    android:src="@drawable/ic_pass"
                    android:layout_width="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="12dp" />

                <EditText
                    android:id="@+id/pass1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/buttonsize"
                    android:layout_weight="1"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/marginmid"
                    android:paddingStart="@dimen/marginmid"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textsize" />



            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="8dp"
                android:layout_margin="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical">
                <ImageView
                    android:src="@drawable/ic_pass"
                    android:layout_width="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="12dp" />
                <EditText
                    android:id="@+id/pass2"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/buttonsize"
                    android:layout_weight="1"
                    android:hint="@string/cpassword"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/marginmid"
                    android:paddingStart="@dimen/marginmid"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textsize" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:layout_margin="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/checkBoxStyle"
                    android:checked="false"/>
                <TextView
                    android:id="@+id/txtDefaultpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:autoLink="web"
                    android:textColorLink="@color/colorPrimary"
                    android:textSize="@dimen/textsize"
                    android:gravity="start"
                    android:text="@string/termsncoditn"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp">
                <ImageView
                    android:src="@drawable/ic_gender"
                    android:layout_width="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="12dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_cluster_bg"
                    android:layout_marginEnd="@dimen/marginsmall"
                    android:padding="8dp"
                    android:id="@+id/aboutme"
                    android:layout_marginRight="@dimen/marginsmall"
                    android:hint="@string/aboutme"
                    android:maxLength="250"
                    android:inputType="textMultiLine"
                    android:maxLines="6"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textsize" />



            </LinearLayout>

            <ImageButton
                android:id="@+id/regfillsubmit"
                android:layout_gravity="center"
                android:padding="@dimen/marginmidig"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:src="@drawable/right_arrow"
                android:background="@drawable/round_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />
            <ImageButton
                android:id="@+id/changepass"
                android:layout_gravity="center"
                android:padding="@dimen/marginmidig"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:src="@drawable/right_arrow"
                android:background="@drawable/round_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />
        </LinearLayout>



    </ScrollView>
    <RelativeLayout
        android:id="@+id/hidden_panel"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:background="@drawable/round_cluster_bg">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/close_popup"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_close_popup"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:text="Change Password"
                    android:textSize="@dimen/buttonsize"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" />
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/iphonebackground"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    tools:context="com.bridge.soom.Activity.ChangePaswordActivity"
                    tools:showIn="@layout/activity_change_pasword">

                    <RelativeLayout
                        android:padding="8dp"
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/ic_employemnettype"
                            android:layout_width="16dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:id="@+id/icon_dob"
                            android:layout_centerVertical="true"
                            android:layout_height="16dp" />
                        <EditText
                            android:id="@+id/oldpass"
                            android:background="@android:color/transparent"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_width="match_parent"
                            android:layout_toEndOf="@+id/icon_dob"
                            android:hint="Old Password"
                            android:textColor="@color/colorPrimaryLight"
                            android:inputType="textPassword"
                            android:textSize="@dimen/textsize"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/icon_dob" />
                        <View
                            android:layout_toRightOf="@+id/icon_dob"
                            android:layout_toEndOf="@+id/icon_dob"
                            android:layout_below="@+id/oldpass"
                            android:layout_width="match_parent"
                            android:background="@android:color/darker_gray"
                            android:layout_height="1dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:padding="8dp"
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/ic_employemnettype"
                            android:layout_width="16dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:id="@+id/icon_dob2"
                            android:layout_centerVertical="true"
                            android:layout_height="16dp" />
                        <EditText
                            android:id="@+id/newpass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_toEndOf="@+id/icon_dob2"
                            android:hint="New Password"
                            android:textColor="@color/colorPrimaryLight"
                            android:inputType="textPassword"
                            android:textSize="@dimen/textsize"
                            android:layout_toRightOf="@+id/icon_dob2" />
                        <View
                            android:layout_toRightOf="@+id/icon_dob2"
                            android:layout_toEndOf="@+id/icon_dob2"
                            android:layout_below="@+id/newpass"
                            android:layout_width="match_parent"
                            android:background="@android:color/darker_gray"
                            android:layout_height="1dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:padding="8dp"
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/ic_employemnettype"
                            android:layout_width="16dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:id="@+id/icon_dob3"
                            android:layout_centerVertical="true"
                            android:layout_height="16dp" />
                        <EditText
                            android:id="@+id/confirmpass"
                            android:layout_toEndOf="@id/icon_dob3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:hint="Retype Password"
                            android:textColor="@color/colorPrimaryLight"
                            android:inputType="textPassword"
                            android:textSize="@dimen/textsize"
                            android:layout_toRightOf="@id/icon_dob3" />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:background="@android:color/darker_gray"
                        android:layout_height="1dp"/>

                    <Button
                        android:id="@+id/fab"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:textAllCaps="false"
                        android:layout_gravity="center"
                        android:text="Submit" />

                </LinearLayout>

            </LinearLayout>


        </ScrollView>

    </RelativeLayout>

</FrameLayout>
